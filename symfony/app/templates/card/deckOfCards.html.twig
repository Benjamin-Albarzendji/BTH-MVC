{% extends "base.html.twig" %}

{% block title %}Deck of Cards{% endblock %}


{% block body %}


<div class="content">
    <div class="cardHolder">

        {% for card in deck %}
        <div class="card">
            <h3 class="topCard" style="color:{{card.getCardColor()}}">
                {{ card.getCardValue() }}</h3>
            <p class="suit" style="color:{{card.getCardColor()}}">{{ card.getCardSuit }}</p>
            <h3 class="bottomCard" style="color:{{card.getCardColor()}}">{{ card.getCardValue() }}</h3>

        </div>
        {% endfor %}
    </div>
</div>



{% endblock %}